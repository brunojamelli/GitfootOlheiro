<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    tools:context=".OlheiroActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/iminicio"
        android:layout_width="315dp"
        android:layout_height="0dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="9dp"
        android:paddingTop="50dp"
        android:src="@drawable/campo"
        app:layout_constraintBottom_toTopOf="@+id/tv_bv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="118dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="@string/bem_vindo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iminicio"
        app:layout_constraintStart_toStartOf="@+id/iminicio"
        app:layout_constraintTop_toBottomOf="@+id/iminicio" />


</android.support.constraint.ConstraintLayout>